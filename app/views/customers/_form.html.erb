<div class="row">
  <div class="span6 offset3">
   
    <%= form_for(@customer) do |d| %>

    <% if @customer.errors.any? %>
    <h4>customer is not added</h4>
    <ul>
       <% @customer.errors.full_messages.each do |error|%>
    <li><%= error%></li>
    <% end%>
    </ul>
<% end%>
<div>
  <table border="0" cellpadding="5px" cellspacing="5px">
    <tr>
      <td>
      <%= d.label :first_name %>
    </td>
    <td>:</td>
    <td>
      <%= d.text_field :first_name %>
    </td>
    </tr>

    <tr>
      <td>
        <%= d.label :last_name %>
      </td>
      <td>:</td>
      <td>
        <%= d.text_field :last_name %>
      </td>
    </tr>


    <tr>
      <td>
        <%= d.label :dob %>
      </td>
      <td>:</td>
      <td>
         <%= d.date_select :dob, { :include_blank => true, :start_year => 1900, :end_year => 2014 } %>
      </td>
    </tr>

    <tr>
      <td>
        <%= d.label :Gender %>
      </td>
      <td>:</td>
      <td>
        <%= d.select :sex, options_for_select(%w[Male Female]), { :include_blank => true}  %>
      </td>
    </tr>

    <tr>
      <td>
          <%= d.label :address %>
      </td>
      <td>:</td>
      <td>
        <%= d.text_area :address, :id =>"address", :cols => 25, :rows => 10 %>
      </td>
    </tr>


    <tr>
      <td>
          <%= d.label :city %>
      </td>
      <td>:</td>
      <td>
          <%= d.text_field :city %>
      </td>
    </tr>

      <tr>
        <td>
          <%= d.label :state %>
        </td>
        <td>:</td>
        <td>
          <%= d.text_field :state %>
        </td>
      </tr>

      <tr>
        <td>
          <%= d.label :pincode %>
        </td>
        <td>:</td>
        <td>
          <%= d.text_field :pincode %>
        </td>
      </tr>

      <tr>
        <td>
          <%= d.label :pan %>
        </td>
        <td>:</td>
        <td>
            <%= d.text_field :pan %>
        </td>
      </tr>

      <tr>
        <td>
          <%= d.label :status %>
        </td>
        <td>:</td>
        <td>
         <%= d.select :status, options_for_select(%w[Pending]), { :include_blank => false}  %>
        </td>
      </tr>

      <tr>
        <td>
          <%= d.submit "Create a New customer ", class: "btn btn-large btn-primary", title: "Add Customer Info", data: {tooltip: true} %>
        </td>
      </tr>
    </table>
    <% end %>
  </div>
</div>